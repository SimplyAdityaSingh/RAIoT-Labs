// Message to display
const char message[] = "RAIOT";
const int messageLength = 5;

void setup() {
  lc.shutdown(0, false);    // Wake up MAX7219
  lc.setIntensity(0, 8);    // Set brightness (0â€“15)
  lc.clearDisplay(0);       // Clear the display
}

void loop() {
  for (int i = 0; i < messageLength; i++) {
    displayLetter(message[i]); // Display each letter
    delay(1000);               // Wait 1 second
    lc.clearDisplay(0);        // Clear display before the next letter
    delay(500);                // Small delay for the transition
  }
}

// Function to display a single letter
void displayLetter(char letter) {
  if (letter < 'A' || letter > 'Z') return; // Skip invalid letters
  byte* pattern = font[letter - 'A'];       // Get font pattern
  for (int row = 0; row < 8; row++) {
    lc.setRow(0, row, pattern[row]);        // Set each row of the display
  }
}
